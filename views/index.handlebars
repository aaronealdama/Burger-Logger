<div class="container center-align">

    <img src="../assets/images/burger.png" alt="burger">

    <h1 class="header">Eat the burger!</h1>

    <ul class="list">
        {{#each burgers}}
        {{#unless devoured}}
        <div class="burger">
            <h4>{{this.burger_name}}</h4>
        </div>
        <button data-id="{{this.id}}" class="devour waves-effect waves-light btn-large">Devour</button>
        {{/unless}}
        {{/each}}
    </ul>

    <h1 class="header">Burgers eaten!</h1>

    <ul class="list">
        {{#each burgers}}
        {{#if devoured}}
        <div class="devoured">
            <h4>{{this.burger_name}}</h4>
        </div>
        {{/if}}
        {{/each}}
    </ul>

    <div class="form">
        <h2 class="header">Add a burger!</h2>
        <form class="create-form">
            <div class="form-group">
                <textarea name="burger" id="add" cols="30" rows="10"></textarea>
            </div>

            <button type="submit" class="submit-button waves-effect waves-light btn-large">Add Burger!</button>
        </form>
    </div>
</div>